<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firetics" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secand_color</item>
        <item name="colorSecondaryVariant">@color/secand_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="fontFamily">@font/varela_round_regular</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/secand_color</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/secand_color</item>
        <item name="trackTint">@color/gary_200</item>
    </style>
   
</resources>